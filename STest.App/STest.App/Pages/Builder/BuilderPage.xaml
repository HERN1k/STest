<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="STest.App.Pages.Builder.BuilderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:STest.App.Pages.Builder"
    xmlns:controls="using:STest.App.Controls"
    xmlns:utilities="using:STest.App.Utilities"
    xmlns:testing="using:STLib.Core.Testing"
    xmlns:taskText="using:STLib.Tasks.Text"
    xmlns:taskTrueFalse="using:STLib.Tasks.TrueFalse"
    xmlns:taskCheckboxes="using:STLib.Tasks.Checkboxes"
    xmlns:taskMultipleChoice="using:STLib.Tasks.MultipleChoice"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">
    <Page.Resources>
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation 
                Storyboard.TargetProperty="Opacity"       
                From="0" 
                To="1" 
                Duration="0:0:0.5"
            />
        </Storyboard>
        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation 
                Storyboard.TargetProperty="Opacity"       
                From="1" 
                To="0" 
                Duration="0:0:0.5"
            />
        </Storyboard>
        <DataTemplate 
            x:Key="TestsListViewTemplate" 
            x:DataType="testing:Test"
        >
            <controls:ConfirmationButton 
                Margin="0, 0, 8, 15"
                Padding="15"
                ToolTipService.ToolTip="{x:Bind Name}"
                Tag="{x:Bind TestID}"
                BorderThickness="1"
                CornerRadius="{StaticResource OverlayCornerRadius}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            >
                <StackPanel>
                    <TextBlock 
                        Text="{x:Bind TrimToLength(Name, 24)}" 
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        HorizontalAlignment="Left"
                        Margin="0, 0, 0, 5"
                    />
                    <TextBlock 
                        Text="{x:Bind TrimToLength(Description, 32)}" 
                        Style="{StaticResource BodyTextBlockStyle}"
                        HorizontalAlignment="Left"
                        Margin="0, 0, 0, 20"
                    />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="0"
                            Text="{x:Bind ToLocalDate(LastModified)}" 
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="0, 0, 20, 0"
                        />
                        <FontIcon 
                            Grid.Column="1"
                            Grid.Row="0"
                            Glyph="&#xE8A7;" 
                            FontSize="14"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                        />
                    </Grid>
                </StackPanel>
            </controls:ConfirmationButton>
        </DataTemplate>
        <DataTemplate 
            x:Key="TextTaskTemplate"
            x:DataType="taskText:TextTask"
        >
            <Border
                Margin="0, 0, 0, 7.5"
                Padding="15"
                BorderThickness="1"
                CornerRadius="{StaticResource OverlayCornerRadius}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}"
                Tag="{x:Bind TaskID}"
            >
                <StackPanel>
                    <Grid Tag="HEADER_PANEL">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="0"
                            Tag="HEADER_NUMBER"
                            Style="{StaticResource BodyStrongTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Opacity="0.8"
                        />
                        <controls:ConfirmationButton
                            Grid.Column="1"
                            Grid.Row="0"
                            Click="RemoveTaskClick"
                            Tag="{x:Bind TaskID}" 
                            ToolTipService.ToolTip="Close"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                        >
                            <FontIcon 
                                Glyph="&#xE711;" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="16"
                            />
                        </controls:ConfirmationButton>
                    </Grid>
                    <RichEditBox 
                        Tag="QUESTION"
                        Width="500" 
                        MinHeight="100"
                        HorizontalAlignment="Center"
                        Margin="0, 0, 0, 15"
                        TextChanged="TaskQuestionChanged"
                    />
                    <RichEditBox 
                        Tag="CORRECT_ANSWER"
                        Width="500" 
                        MinHeight="100"
                        HorizontalAlignment="Center"
                        Margin="0, 0, 0, 15"
                        TextChanged="TaskCorrectAnswerChanged"
                    />
                    <StackPanel 
                        Orientation="Horizontal"
                        Tag="MAX_GRADE_PANEL"
                        Margin="0, 0, 0, 15"
                    >
                        <TextBlock 
                            Tag="MAX_GRADE"
                            Style="{StaticResource BodyTextBlockStyle}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            LineStackingStrategy="BlockLineHeight"
                            Margin="0, 0, 15, 0"
                        />
                        <NumberBox
                            Tag="MAX_GRADE_INPUT"
                            Value="1"
                            SpinButtonPlacementMode="Compact"
                            Minimum="1"
                            Maximum="100"
                            SmallChange="1"
                            LargeChange="10" 
                            MinWidth="150"
                            ValueChanged="TaskMaxGradeChanged"
                        />
                    </StackPanel>
                    <StackPanel 
                        Orientation="Horizontal"
                        Tag="CONSIDER_IN_THE_ASSESSMENT_PANEL"
                    >
                        <TextBlock 
                            Tag="CONSIDER_IN_THE_ASSESSMENT"
                            Style="{StaticResource BodyTextBlockStyle}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            LineStackingStrategy="BlockLineHeight"
                            Margin="0, 0, 15, 0"
                        />
                        <ToggleSwitch 
                            Tag="CONSIDER_IN_THE_ASSESSMENT_SWITCHER"
                            IsOn="True"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Toggled="TaskConsiderToggled"
                        />
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate 
            x:Key="TrueFalseTaskTemplate"
            x:DataType="taskTrueFalse:TrueFalseTask"
        >
            <Border
                Margin="0, 0, 0, 7.5"
                Padding="15"
                BorderThickness="1"
                CornerRadius="{StaticResource OverlayCornerRadius}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}"
                Tag="{x:Bind TaskID}"
            >
                <StackPanel>
                    <Grid Tag="HEADER_PANEL">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="0"
                            Tag="HEADER_NUMBER"
                            Style="{StaticResource BodyStrongTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Opacity="0.8"
                        />
                        <controls:ConfirmationButton
                            Grid.Column="1"
                            Grid.Row="0"
                            Click="RemoveTaskClick"
                            Tag="{x:Bind TaskID}" 
                            ToolTipService.ToolTip="Close"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                        >
                            <FontIcon 
                                Glyph="&#xE711;" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="16"
                            />
                        </controls:ConfirmationButton>
                    </Grid>
                    <RichEditBox 
                        Tag="QUESTION"
                        Width="500" 
                        MinHeight="100"
                        HorizontalAlignment="Center"
                        Margin="0, 0, 0, 15"
                        TextChanged="TaskQuestionChanged"
                    />
                    <TextBlock 
                        Tag="CORRECT_ANSWER"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0, 0, 0, 7.5"
                    />
                    <StackPanel 
                        Tag="CORRECT_ANSWER_PANEL"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0, 0, 0, 15"
                    >
                        <RadioButton 
                            Tag="CORRECT_ANSWER_RADIO_TRUE" 
                            IsChecked="True" 
                            MinWidth="10"
                            Margin="0, 0, 30, 0"
                            Checked="CorrectAnswerRadioButtonChecked"
                        >
                            <RadioButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Style="{StaticResource BodyStrongTextBlockStyle}" />
                                </DataTemplate>
                            </RadioButton.ContentTemplate>
                        </RadioButton>
                        <RadioButton 
                            Tag="CORRECT_ANSWER_RADIO_FALSE" 
                            MinWidth="10"
                            Checked="CorrectAnswerRadioButtonChecked"
                        >
                            <RadioButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Style="{StaticResource BodyStrongTextBlockStyle}" />
                                </DataTemplate>
                            </RadioButton.ContentTemplate>
                        </RadioButton>
                    </StackPanel>
                    <StackPanel 
                        Orientation="Horizontal"
                        Tag="MAX_GRADE_PANEL"
                        Margin="0, 0, 0, 15"
                    >
                        <TextBlock 
                            Tag="MAX_GRADE"
                            Style="{StaticResource BodyTextBlockStyle}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            LineStackingStrategy="BlockLineHeight"
                            Margin="0, 0, 15, 0"
                        />
                        <NumberBox
                            Tag="MAX_GRADE_INPUT"
                            Value="1"
                            SpinButtonPlacementMode="Compact"
                            Minimum="1"
                            Maximum="100"
                            SmallChange="1"
                            LargeChange="10" 
                            MinWidth="150"
                            ValueChanged="TaskMaxGradeChanged"
                        />
                    </StackPanel>
                    <StackPanel 
                        Orientation="Horizontal"
                        Tag="CONSIDER_IN_THE_ASSESSMENT_PANEL"
                    >
                        <TextBlock 
                            Tag="CONSIDER_IN_THE_ASSESSMENT"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Margin="0, 0, 15, 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            LineStackingStrategy="BlockLineHeight"
                        />
                        <ToggleSwitch 
                            Tag="CONSIDER_IN_THE_ASSESSMENT_SWITCHER"
                            IsOn="True"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Toggled="TaskConsiderToggled"
                        />
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate 
            x:Key="CheckboxesTaskTemplate"
            x:DataType="taskCheckboxes:CheckboxesTask"
        >
            <Border
                Margin="0, 0, 0, 7.5"
                Padding="15"
                BorderThickness="1"
                CornerRadius="{StaticResource OverlayCornerRadius}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}"
                Tag="{x:Bind TaskID}"
            >
                <StackPanel>
                    <Grid Tag="HEADER_PANEL">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="0"
                            Tag="HEADER_NUMBER"
                            Style="{StaticResource BodyStrongTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Opacity="0.8"
                        />
                        <controls:ConfirmationButton
                            Grid.Column="1"
                            Grid.Row="0"
                            Click="RemoveTaskClick"
                            Tag="{x:Bind TaskID}" 
                            ToolTipService.ToolTip="Close"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                        >
                            <FontIcon 
                                Glyph="&#xE711;" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="16"
                            />
                        </controls:ConfirmationButton>
                    </Grid>
                    <RichEditBox 
                        Tag="QUESTION"
                        Width="500" 
                        MinHeight="100"
                        HorizontalAlignment="Center"
                        Margin="0, 0, 0, 15"
                        TextChanged="TaskQuestionChanged"
                    />
                    <ListView
                        Tag="ANSWERS_LIST"
                        ItemTemplate="{StaticResource CheckBoxesAnswersListViewTemplate}"
                        SelectionMode="None"
                        Margin="0, 0, 0, 15"
                    />
                    <StackPanel 
                        Tag="ADD_ANSWER_PANEL"
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="15"
                        Margin="0, 0, 0, 15"
                        Visibility="Visible"
                    >
                        <TextBox
                            Tag="ADD_ANSWER_INPUT"
                            MinWidth="300"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextChanged="AnswerMultipleChoiceTextBoxTextChanged"
                        />
                        <controls:ConfirmationButton
                            Tag="ADD_ANSWER_ADD_BUTTON"
                            Padding="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ToolTipService.ToolTip="Add"
                            Click="AddAnswerCheckboxesClick"
                            IsEnabled="False"
                        >
                            <FontIcon Glyph="&#xE710;" FontSize="16" />
                        </controls:ConfirmationButton>
                    </StackPanel>
                    <ListView
                        Tag="CHACK_BOX_LIST"
                        ItemTemplate="{StaticResource CheckBoxesListViewTemplate}"
                        SelectionMode="None"
                        Margin="0, 0, 0, 15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                    />
                    <TextBlock 
                        Tag="MAX_GRADE"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0, 0, 0, 15"
                        Foreground="{ThemeResource SystemFillColorAttentionBrush}"
                    />
                    <StackPanel 
                        Orientation="Horizontal"
                        Tag="CONSIDER_IN_THE_ASSESSMENT_PANEL"
                    >
                        <TextBlock 
                            Tag="CONSIDER_IN_THE_ASSESSMENT"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Margin="0, 0, 15, 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            LineStackingStrategy="BlockLineHeight"
                        />
                        <ToggleSwitch 
                            Tag="CONSIDER_IN_THE_ASSESSMENT_SWITCHER"
                            IsOn="True"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Toggled="TaskConsiderToggled"
                        />
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate 
            x:Key="MultipleChoiceTaskTemplate"
            x:DataType="taskMultipleChoice:MultipleChoiceTask"
        >
            <Border
                Margin="0, 0, 0, 7.5"
                Padding="15"
                BorderThickness="1"
                CornerRadius="{StaticResource OverlayCornerRadius}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}"
                Tag="{x:Bind TaskID}"
            >
                <StackPanel>
                    <Grid Tag="HEADER_PANEL">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="0"
                            Tag="HEADER_NUMBER"
                            Style="{StaticResource BodyStrongTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Opacity="0.8"
                        />
                        <controls:ConfirmationButton
                            Grid.Column="1"
                            Grid.Row="0"
                            Click="RemoveTaskClick"
                            Tag="{x:Bind TaskID}" 
                            ToolTipService.ToolTip="Close"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                        >
                            <FontIcon 
                                Glyph="&#xE711;" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="16"
                            />
                        </controls:ConfirmationButton>
                    </Grid>
                    <RichEditBox 
                        Tag="QUESTION"
                        Width="500" 
                        MinHeight="100"
                        HorizontalAlignment="Center"
                        Margin="0, 0, 0, 15"
                        TextChanged="TaskQuestionChanged"
                    />
                    <ListView
                        Tag="ANSWERS_LIST"
                        ItemTemplate="{StaticResource AnswersListViewTemplate}"
                        SelectionMode="None"
                        Margin="0, 0, 0, 15"
                    />
                    <StackPanel 
                        Tag="ADD_ANSWER_PANEL"
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="15"
                        Margin="0, 0, 0, 15"
                        Visibility="Visible"
                    >
                        <TextBox
                            Tag="ADD_ANSWER_INPUT"
                            MinWidth="300"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextChanged="AnswerMultipleChoiceTextBoxTextChanged"
                        />
                        <controls:ConfirmationButton
                            Tag="ADD_ANSWER_ADD_BUTTON"
                            Padding="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ToolTipService.ToolTip="Add"
                            Click="AddAnswerMultipleChoiceClick"
                            IsEnabled="False"
                        >
                            <FontIcon Glyph="&#xE710;" FontSize="16" />
                        </controls:ConfirmationButton>
                    </StackPanel>
                    <ComboBox
                        Tag="ADD_ANSWER_COMBO_BOX"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0, 0, 0, 25"
                        MinWidth="350"
                        SelectionChanged="CorrectAnswerMultipleChoiceSelectionChanged"
                    />
                    <StackPanel 
                        Orientation="Horizontal"
                        Tag="MAX_GRADE_PANEL"
                        Margin="0, 0, 0, 15"
                    >
                        <TextBlock 
                            Tag="MAX_GRADE"
                            Style="{StaticResource BodyTextBlockStyle}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            LineStackingStrategy="BlockLineHeight"
                            Margin="0, 0, 15, 0"
                        />
                        <NumberBox
                            Tag="MAX_GRADE_INPUT"
                            Value="1"
                            SpinButtonPlacementMode="Compact"
                            Minimum="1"
                            Maximum="100"
                            SmallChange="1"
                            LargeChange="10" 
                            MinWidth="150"
                            ValueChanged="TaskMaxGradeChanged"
                        />
                    </StackPanel>
                    <StackPanel 
                        Orientation="Horizontal"
                        Tag="CONSIDER_IN_THE_ASSESSMENT_PANEL"
                    >
                        <TextBlock 
                            Tag="CONSIDER_IN_THE_ASSESSMENT"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Margin="0, 0, 15, 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            LineStackingStrategy="BlockLineHeight"
                        />
                        <ToggleSwitch 
                            Tag="CONSIDER_IN_THE_ASSESSMENT_SWITCHER"
                            IsOn="True"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Toggled="TaskConsiderToggled"
                        />
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:DataType="utilities:TestBuilderAnswersListViewItem" x:Key="AnswersListViewTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem  
                            Text="&#xE74D;" 
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            FontSize="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Tag="{x:Bind ID}"
                            Click="RemoveAnswerMultipleChoiceClick"
                        />
                    </MenuFlyout>
                </Grid.ContextFlyout>
                <Border
                    Grid.Column="0"
                    Grid.Row="0"
                    BorderThickness="1"
                    BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Background="{StaticResource LayerOnAcrylicFillColorDefaultBrush}"
                    Padding="5"
                >
                    <TextBlock
                        Text="{x:Bind Text}"
                        Style="{StaticResource BodyTextBlockStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap"
                    />
                </Border>
            </Grid>
        </DataTemplate>
        <DataTemplate x:DataType="utilities:TestBuilderCheckBoxesListViewItem" x:Key="CheckBoxesAnswersListViewTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem  
                            Text="&#xE74D;" 
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            FontSize="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Tag="{x:Bind ID}"
                            Click="RemoveAnswerCheckBoxesClick"
                        />
                    </MenuFlyout>
                </Grid.ContextFlyout>
                <Border
                    Grid.Column="0"
                    Grid.Row="0"
                    BorderThickness="1"
                    BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Background="{StaticResource LayerOnAcrylicFillColorDefaultBrush}"
                    Padding="5"
                >
                    <TextBlock
                        Text="{x:Bind Text}"
                        Style="{StaticResource BodyTextBlockStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap"
                    />
                </Border>
            </Grid>
        </DataTemplate>
        <DataTemplate x:DataType="utilities:TestBuilderCheckBoxesListViewItem" x:Key="CheckBoxesListViewTemplate">
            <CheckBox 
                Tag="{x:Bind ID}"
                MinWidth="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Checked="CheckBoxCheck"
                Unchecked="CheckBoxUncheck"
                IsChecked="{x:Bind IsChecked}"
            >
                <TextBlock
                    Text="{x:Bind Text}"
                    Style="{StaticResource BodyTextBlockStyle}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                />
            </CheckBox>
        </DataTemplate>
        <utilities:TaskTemplateSelector 
            x:Key="TaskTemplateSelector"
            TextTaskTemplate="{StaticResource TextTaskTemplate}"
            TrueFalseTaskTemplate="{StaticResource TrueFalseTaskTemplate}"
            CheckboxesTaskTemplate="{StaticResource CheckboxesTaskTemplate}"
            MultipleChoiceTaskTemplate="{StaticResource MultipleChoiceTaskTemplate}"
        />
    </Page.Resources>
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <controls:ConfirmationButton 
                        x:Name="CreateNewTestButton"
                        Click="CreateNewTestButtonClick"
                        Margin="15, 15, 7.5, 15"
                        Padding="15"
                        Width="120"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="Create new test"
                        BorderThickness="1"
                        CornerRadius="{StaticResource OverlayCornerRadius}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Visibility="Collapsed"
                    >
                        <FontIcon 
                            Glyph="&#xE710;" 
                            FontSize="24"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                        />
                    </controls:ConfirmationButton>
                    <ListView 
                        ItemsSource="{x:Bind TestsList}"
                        Margin="7.5, 15, 0, 0"
                        SelectionMode="None"
                        ItemTemplate="{StaticResource TestsListViewTemplate}"
                        ScrollViewer.HorizontalScrollMode="Enabled"
                        ScrollViewer.VerticalScrollMode="Disabled"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    >
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    <controls:ConfirmationButton 
                        x:Name="EmptyTestsListButton"
                        Click="EmptyTestsListButtonClick"
                        Margin="7.5, 15, 8, 15"
                        Padding="15"
                        ToolTipService.ToolTip="Create new test"
                        BorderThickness="1"
                        CornerRadius="{StaticResource OverlayCornerRadius}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Visibility="Collapsed"
                    >
                        <StackPanel>
                            <TextBlock 
                                x:Name="EmptyTestsListTitle"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                HorizontalAlignment="Left"
                                Margin="0, 0, 0, 5"
                            />
                            <TextBlock 
                                x:Name="EmptyTestsListDescription"
                                Style="{StaticResource BodyTextBlockStyle}"
                                HorizontalAlignment="Left"
                                Margin="0, 0, 0, 20"
                            />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon 
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Glyph="&#xE8A7;" 
                                    FontSize="14"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                />
                            </Grid>
                        </StackPanel>
                    </controls:ConfirmationButton>
                </StackPanel>
                <Border 
                    Margin="15, 0, 15, 15"
                    BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0, 0, 0, 1"
                />
                
                <Border 
                    x:Name="TestBuilderBorder"
                    Margin="15, 0, 15, 15"
                    Padding="15"
                    RenderTransformOrigin="0.5,0.5"
                    Visibility="Collapsed"
                    BorderThickness="1"
                    BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                    CornerRadius="{StaticResource OverlayCornerRadius}"
                    Background="{StaticResource LayerOnAcrylicFillColorDefaultBrush}"
                >
                    <StackPanel>
                        <TextBlock 
                            x:Name="TestsBuilderTitle"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Foreground="{ThemeResource AccentTextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                        />
                        <TextBox 
                            x:Name="TestsBuilderName"
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 20"
                            Width="500"
                            TextChanged="TestNameChanged"
                        />
                        <TextBox 
                            x:Name="TestsBuilderDescription"
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 20"
                            Width="500"
                            TextChanged="TestDescriptionChanged"
                        />
                        <RichEditBox 
                            x:Name="TestsBuilderInstructions"
                            Width="500" 
                            MinHeight="100"
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 20"
                            TextChanged="TestInstructionsChanged"
                        />
                        <TimePicker 
                            x:Name="TestsBuilderTime"
                            ClockIdentifier="24HourClock" 
                            HorizontalAlignment="Center"
                            TimeChanged="TestTestTimeChanged"
                        />
                        <!--Добавить добавление людей-->
                        <!--Добавить визуализатор теста в новом окне-->
                        <Border 
                            Margin="15"
                            BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0, 0, 0, 1"
                        />
                        <ListView
                            x:Name="TasksListView"
                            ItemsSource="{x:Bind TasksList}"
                            ItemTemplateSelector="{StaticResource TaskTemplateSelector}"
                            HorizontalAlignment="Center"
                            SelectionMode="None"
                        />
                        <Button 
                            Margin="0, 15, 0, 0"
                            Padding="40,7.5"
                            HorizontalAlignment="Center"
                        >
                            <StackPanel Orientation="Horizontal">
                                <FontIcon 
                                    Glyph="&#xE78B;" 
                                    Margin="0, 0, 10, 0"
                                    FontSize="18"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                />
                                <TextBlock 
                                    x:Name="AddNewTaskButtonText"
                                    FontWeight="Medium"
                                    FontSize="14"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    LineStackingStrategy="BlockLineHeight"
                                    LineHeight="14"
                                />
                            </StackPanel>
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem 
                                        x:Name="TextTaskFlyout" 
                                        Tag="Text" 
                                        Click="AddNewTaskClick"
                                    />
                                    <MenuFlyoutItem 
                                        x:Name="TrueFalseTaskFlyout" 
                                        Tag="TrueFalse" 
                                        Click="AddNewTaskClick"
                                    />
                                    <MenuFlyoutItem 
                                        x:Name="CheckboxesTaskFlyout" 
                                        Tag="Checkboxes" 
                                        Click="AddNewTaskClick"
                                    />
                                    <MenuFlyoutItem 
                                        x:Name="MultipleChoiceTaskFlyout" 
                                        Tag="MultipleChoice" 
                                        Click="AddNewTaskClick"
                                    />
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <Border 
                            Margin="15"
                            BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0, 0, 0, 1"
                        />
                        <StackPanel 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                        >
                            <controls:ConfirmationButton 
                                Margin="0, 0, 7.5, 0"
                                ToolTipService.ToolTip="Save"
                                Padding="15,7.5"
                            >
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon 
                                        Glyph="&#xE74E;" 
                                        Margin="0, 0, 10, 0"
                                        FontSize="20"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                    />
                                    <TextBlock 
                                        x:Name="SaveButtonText"
                                        FontWeight="Medium"
                                        FontSize="16"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        LineStackingStrategy="BlockLineHeight"
                                        LineHeight="16"
                                    />
                                </StackPanel>
                            </controls:ConfirmationButton>
                            <controls:ConfirmationButton 
                                Margin="7.5, 0, 0, 0"
                                Padding="15,7.5"
                                ToolTipService.ToolTip="Send"
                            >
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon 
                                        Glyph="&#xE724;" 
                                        Margin="0, 0, 10, 0"
                                        FontSize="18"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                    />
                                    <TextBlock 
                                        x:Name="SendButtonText"
                                        FontWeight="Medium"
                                        FontSize="16"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        LineStackingStrategy="BlockLineHeight"
                                        LineHeight="16"
                                    />
                                </StackPanel>
                            </controls:ConfirmationButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>