<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="STest.App.Pages.Builder.BuilderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:STest.App.Pages.Builder"
    xmlns:controls="using:STest.App.Controls"
    xmlns:utilities="using:STest.App.Utilities"
    xmlns:testing="using:STLib.Core.Testing"
    xmlns:taskText="using:STLib.Tasks.Text"
    xmlns:taskTrueFalse="using:STLib.Tasks.TrueFalse"
    xmlns:taskCheckboxes="using:STLib.Tasks.Checkboxes"
    xmlns:taskMultipleChoice="using:STLib.Tasks.MultipleChoice"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Storyboard 
            x:Key="FadeInAnimation"
        >
            <DoubleAnimation 
                Storyboard.TargetProperty="Opacity"       
                From="0" 
                To="1" 
                Duration="0:0:0.5"
            />
        </Storyboard>
        <Storyboard 
            x:Key="FadeOutAnimation"
        >
            <DoubleAnimation 
                Storyboard.TargetProperty="Opacity"       
                From="1" 
                To="0" 
                Duration="0:0:0.5"
            />
        </Storyboard>
        <DataTemplate 
            x:Key="TestsListViewTemplate" 
            x:DataType="testing:Test"
        >
            <controls:ConfirmationButton 
                Margin="0, 0, 8, 15"
                Padding="15"
                ToolTipService.ToolTip="{x:Bind Name}"
                BorderThickness="1"
                CornerRadius="{StaticResource OverlayCornerRadius}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Click="OpenTestButtonClick"
            >
                <StackPanel>
                    <TextBlock 
                        Text="{x:Bind TrimToLength(Name, 24)}" 
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        HorizontalAlignment="Left"
                        Margin="0, 0, 0, 5"
                    />
                    <TextBlock 
                        Text="{x:Bind TrimToLength(Description, 32)}" 
                        Style="{StaticResource BodyTextBlockStyle}"
                        HorizontalAlignment="Left"
                        Margin="0, 0, 0, 20"
                    />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="0"
                            Text="{x:Bind ToLocalDate(LastModified)}" 
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="0, 0, 20, 0"
                        />
                        <FontIcon 
                            Grid.Column="1"
                            Grid.Row="0"
                            Glyph="&#xE8A7;" 
                            FontSize="14"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                        />
                    </Grid>
                </StackPanel>
            </controls:ConfirmationButton>
        </DataTemplate>
        <ControlTemplate 
            x:Key="TaskTemplate" 
            TargetType="ContentControl"
        >
            <Border
                Margin="0, 0, 0, 7.5"
                Padding="15"
                BorderThickness="1"
                CornerRadius="{StaticResource OverlayCornerRadius}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}"
            >
                <StackPanel>
                    <Grid Loaded="OnTaskHeaderLoaded">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="0"
                            Style="{StaticResource BodyStrongTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Opacity="0.8"
                        />
                        <controls:ConfirmationButton
                            Grid.Column="1"
                            Grid.Row="0"
                            Click="RemoveTaskClick"
                            ToolTipService.ToolTip="Close"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                        >
                            <FontIcon 
                                Glyph="&#xE711;" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="16"
                            />
                        </controls:ConfirmationButton>
                    </Grid>
                    <RichEditBox 
                        Width="500" 
                        MinHeight="100"
                        HorizontalAlignment="Center"
                        Margin="0, 0, 0, 15"
                        TextChanged="TaskQuestionChanged"
                        Loaded="TaskQuestionLoaded"
                    />
                    <ContentPresenter />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock 
                            Style="{StaticResource BodyTextBlockStyle}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            LineStackingStrategy="BlockLineHeight"
                            Margin="0, 0, 15, 0"
                            Loaded="OnTaskConsiderTextLoaded"
                        />      
                        <ToggleSwitch 
                            IsOn="True"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Toggled="TaskConsiderToggled"
                            Loaded="TaskConsiderLoaded"
                        />
                    </StackPanel>
                </StackPanel>
            </Border>
        </ControlTemplate>
        <ControlTemplate 
            x:Key="TaskMaxGradeTemplate" 
            TargetType="ContentControl"
        >
            <StackPanel 
                Orientation="Horizontal"
                Margin="0, 0, 0, 15"
            >
                <TextBlock 
                    Text="{x:Bind utilities:MessageProvider.ASSESSMENT_FOR_CORRECT_ANSWER_KEY}"
                    Style="{StaticResource BodyTextBlockStyle}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    LineStackingStrategy="BlockLineHeight"
                    Margin="0, 0, 15, 0"
                />
                <NumberBox
                    Value="1"
                    SpinButtonPlacementMode="Compact"
                    Minimum="1"
                    Maximum="100"
                    SmallChange="1"
                    LargeChange="10" 
                    MinWidth="150"
                    ValueChanged="TaskMaxGradeChanged"
                    Loaded="TaskMaxGradeLoaded"
                />
            </StackPanel>
        </ControlTemplate>
        <DataTemplate 
            x:Key="TextTaskTemplate"
            x:DataType="taskText:TextTask"
        >
            <ContentControl Template="{StaticResource TaskTemplate}" DataContext="{Binding}">
                <StackPanel>
                    <RichEditBox 
                        Header="{x:Bind utilities:MessageProvider.ToHeaderCenter(utilities:MessageProvider.CORRECT_ANSWER_KEY)}"
                        PlaceholderText="{x:Bind utilities:MessageProvider.THIS_SHOULD_BE_THE_CORRECT_ANSWER_KEY}"
                        Width="500" 
                        MinHeight="100"
                        HorizontalAlignment="Center"
                        Margin="0, 0, 0, 15"
                        TextChanged="TaskCorrectAnswerChanged"
                        Loaded="TaskCorrectAnswerLoaded"
                    />
                    <ContentControl Template="{StaticResource TaskMaxGradeTemplate}" DataContext="{Binding}" />
                </StackPanel>
            </ContentControl>
        </DataTemplate>
        <DataTemplate 
            x:Key="TrueFalseTaskTemplate"
            x:DataType="taskTrueFalse:TrueFalseTask"
        >
            <ContentControl Template="{StaticResource TaskTemplate}" DataContext="{Binding}">
                <StackPanel>
                    <TextBlock 
                        Text="{x:Bind x:String.Concat(utilities:MessageProvider.CORRECT_ANSWER_KEY, utilities:Constants.COLON)}"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0, 0, 0, 7.5"
                    />
                    <StackPanel 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0, 0, 0, 15"
                    >
                        <RadioButton 
                            IsChecked="True" 
                            MinWidth="10"
                            Margin="0, 0, 30, 0"
                            Checked="CorrectAnswerRadioButtonChecked"
                            Loaded="CorrectAnswerRadioButtonLoaded"
                        >
                            <TextBlock 
                                Text="{x:Bind utilities:MessageProvider.YES}" 
                                Style="{StaticResource BodyStrongTextBlockStyle}" 
                            />
                        </RadioButton>
                        <RadioButton 
                            MinWidth="10"
                            Checked="CorrectAnswerRadioButtonChecked"
                            Loaded="CorrectAnswerRadioButtonLoaded"
                        >
                            <TextBlock 
                                Text="{x:Bind utilities:MessageProvider.NO}" 
                                Style="{StaticResource BodyStrongTextBlockStyle}" 
                            />
                        </RadioButton>
                    </StackPanel>
                    <ContentControl Template="{StaticResource TaskMaxGradeTemplate}" DataContext="{Binding}" />
                </StackPanel>
            </ContentControl>
        </DataTemplate>
        <DataTemplate 
            x:Key="CheckboxesTaskTemplate"
            x:DataType="taskCheckboxes:CheckboxesTask"
        >
            <ContentControl Template="{StaticResource TaskTemplate}" DataContext="{Binding}">
                <StackPanel>
                    <ListView
                        Header="{x:Bind utilities:MessageProvider.ToHeaderCenter(utilities:MessageProvider.ANSWERS_KEY)}"
                        ItemTemplate="{StaticResource CheckBoxesAnswersListViewTemplate}"
                        SelectionMode="None"
                        Margin="0, 0, 0, 15"
                        Loaded="AnswersListViewLoaded"
                    />
                    <StackPanel 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="15"
                        Margin="0, 0, 0, 15"
                        Visibility="Visible"
                        Loaded="AnswersInputStackLoaded"
                    >
                        <TextBox
                            Tag="{x:Bind TaskID}"
                            PlaceholderText="{x:Bind utilities:MessageProvider.THIS_SHOULD_BE_THE_ANSWER_KEY}"
                            MinWidth="300"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextChanged="AnswerTextBoxTextChanged"
                        />
                        <controls:ConfirmationButton
                            Tag="{x:Bind TaskID}"
                            Padding="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ToolTipService.ToolTip="Add"
                            Click="AddAnswerCheckboxesClick"
                            IsEnabled="False"
                        >
                            <FontIcon Glyph="&#xE710;" FontSize="16" />
                        </controls:ConfirmationButton>
                    </StackPanel>
                    <ListView
                        Header="{x:Bind utilities:MessageProvider.ToHeaderCenter(utilities:MessageProvider.CORRECT_ANSWERS_KEY)}"
                        ItemTemplate="{StaticResource CheckBoxesListViewTemplate}"
                        SelectionMode="None"
                        Margin="0, 0, 0, 15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Loaded="CheckboxesCorrectAnswersListViewLoaded"
                    />
                    <TextBlock 
                        Text="{x:Bind utilities:MessageProvider.EACH_CORRECT_ANS_WORTH_ONE_POINT_IN_FINAL_ASSESSMENT_KEY}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0, 0, 0, 15"
                        Foreground="{ThemeResource SystemFillColorAttentionBrush}"
                    />
                </StackPanel>
            </ContentControl>
        </DataTemplate>
        <DataTemplate 
            x:Key="MultipleChoiceTaskTemplate"
            x:DataType="taskMultipleChoice:MultipleChoiceTask"
        >
            <ContentControl Template="{StaticResource TaskTemplate}" DataContext="{Binding}">
                <StackPanel>
                    <ListView
                        Header="{x:Bind utilities:MessageProvider.ToHeaderCenter(utilities:MessageProvider.ANSWERS_KEY)}"
                        ItemTemplate="{StaticResource AnswersListViewTemplate}"
                        SelectionMode="None"
                        Margin="0, 0, 0, 15"
                        Loaded="MultipleChoiceAnswersListViewLoaded"
                    />
                    <StackPanel 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="15"
                        Margin="0, 0, 0, 15"
                        Visibility="Visible"
                        Loaded="AnswersInputStackLoaded"
                    >
                        <TextBox
                            Tag="{x:Bind TaskID}"
                            PlaceholderText="{x:Bind utilities:MessageProvider.THIS_SHOULD_BE_THE_ANSWER_KEY}"
                            MinWidth="300"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextChanged="AnswerTextBoxTextChanged"
                        />
                        <controls:ConfirmationButton
                            Tag="{x:Bind TaskID}"
                            Padding="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ToolTipService.ToolTip="Add"
                            Click="AddAnswerMultipleChoiceClick"
                            IsEnabled="False"
                        >
                            <FontIcon Glyph="&#xE710;" FontSize="16" />
                        </controls:ConfirmationButton>
                    </StackPanel>
                    <ComboBox
                        Header="{x:Bind utilities:MessageProvider.ToHeaderCenter(utilities:MessageProvider.CORRECT_ANSWER_KEY)}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0, 0, 0, 25"
                        MinWidth="350"
                        SelectionChanged="CorrectAnswerMultipleChoiceSelectionChanged"
                        Loaded="MultipleChoiceCorrectAnswerLoaded"
                    />
                    <ContentControl Template="{StaticResource TaskMaxGradeTemplate}" DataContext="{Binding}" />
                </StackPanel>
            </ContentControl>
        </DataTemplate>
        <DataTemplate 
            x:DataType="utilities:BuilderListItem" 
            x:Key="AnswersListViewTemplate"
        >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem  
                            Text="&#xE74D;" 
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            FontSize="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="RemoveAnswerMultipleChoiceClick"
                        />
                    </MenuFlyout>
                </Grid.ContextFlyout>
                <Border
                    Grid.Column="0"
                    Grid.Row="0"
                    BorderThickness="1"
                    BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Background="{StaticResource LayerOnAcrylicFillColorDefaultBrush}"
                    Padding="5"
                >
                    <TextBlock
                        Text="{x:Bind Text}"
                        Style="{StaticResource BodyTextBlockStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap"
                    />
                </Border>
            </Grid>
        </DataTemplate>
        <DataTemplate 
            x:DataType="utilities:BuilderListItem" 
            x:Key="CheckBoxesAnswersListViewTemplate"
        >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem  
                            Text="&#xE74D;" 
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            FontSize="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="RemoveAnswerCheckBoxesClick"
                        />
                    </MenuFlyout>
                </Grid.ContextFlyout>
                <Border
                    Grid.Column="0"
                    Grid.Row="0"
                    BorderThickness="1"
                    BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Background="{StaticResource LayerOnAcrylicFillColorDefaultBrush}"
                    Padding="5"
                >
                    <TextBlock
                        Text="{x:Bind Text}"
                        Style="{StaticResource BodyTextBlockStyle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap"
                    />
                </Border>
            </Grid>
        </DataTemplate>
        <DataTemplate 
            x:DataType="utilities:BuilderListItem" 
            x:Key="CheckBoxesListViewTemplate"
        >
            <CheckBox 
                MinWidth="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Checked="CheckBoxCheck"
                Unchecked="CheckBoxUncheck"
                IsChecked="{x:Bind IsChecked}"
            >
                <TextBlock
                    Text="{x:Bind Text}"
                    Style="{StaticResource BodyTextBlockStyle}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                />
            </CheckBox>
        </DataTemplate>
        <utilities:TaskTemplateSelector 
            x:Key="TaskTemplateSelector"
            TextTaskTemplate="{StaticResource TextTaskTemplate}"
            TrueFalseTaskTemplate="{StaticResource TrueFalseTaskTemplate}"
            CheckboxesTaskTemplate="{StaticResource CheckboxesTaskTemplate}"
            MultipleChoiceTaskTemplate="{StaticResource MultipleChoiceTaskTemplate}"
        />
    </Page.Resources>
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <controls:ConfirmationButton 
                        x:Name="CreateNewTestButton"
                        Click="CreateNewTestButtonClick"
                        Margin="15, 15, 7.5, 15"
                        Padding="15"
                        Width="120"
                        VerticalAlignment="Stretch"
                        ToolTipService.ToolTip="Create new test"
                        BorderThickness="1"
                        CornerRadius="{StaticResource OverlayCornerRadius}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Visibility="Collapsed"
                    >
                        <FontIcon 
                            Glyph="&#xE710;" 
                            FontSize="24"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                        />
                    </controls:ConfirmationButton>
                    <ListView 
                        ItemsSource="{x:Bind TestsList}"
                        Margin="7.5, 15, 0, 0"
                        SelectionMode="None"
                        ItemTemplate="{StaticResource TestsListViewTemplate}"
                        ScrollViewer.HorizontalScrollMode="Enabled"
                        ScrollViewer.VerticalScrollMode="Disabled"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    >
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    <controls:ConfirmationButton 
                        x:Name="EmptyTestsListButton"
                        Click="EmptyTestsListButtonClick"
                        Margin="7.5, 15, 8, 15"
                        Padding="15"
                        ToolTipService.ToolTip="Create new test"
                        BorderThickness="1"
                        CornerRadius="{StaticResource OverlayCornerRadius}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Visibility="Collapsed"
                    >
                        <StackPanel>
                            <TextBlock 
                                Text="{x:Bind utilities:MessageProvider.CREATE_NEW_TEST_KEY}"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                HorizontalAlignment="Left"
                                Margin="0, 0, 0, 5"
                            />
                            <TextBlock 
                                Text="{x:Bind utilities:MessageProvider.LIST_OF_RECENT_TESTS_IS_EMPTY_KEY}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                HorizontalAlignment="Left"
                                Margin="0, 0, 0, 20"
                            />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon 
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Glyph="&#xE8A7;" 
                                    FontSize="14"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                />
                            </Grid>
                        </StackPanel>
                    </controls:ConfirmationButton>
                </StackPanel>
                <Border 
                    Margin="15, 0, 15, 15"
                    BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0, 0, 0, 1"
                />
                <Border 
                    x:Name="TestBuilderBorder"
                    Margin="15, 0, 15, 15"
                    Padding="15"
                    RenderTransformOrigin="0.5,0.5"
                    Visibility="Collapsed"
                    BorderThickness="1"
                    BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                    CornerRadius="{StaticResource OverlayCornerRadius}"
                    Background="{StaticResource LayerOnAcrylicFillColorDefaultBrush}"
                >
                    <StackPanel>
                        <TextBlock 
                            Text="{x:Bind utilities:MessageProvider.EDITOR_KEY}"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Foreground="{ThemeResource AccentTextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                        />
                        <TextBox 
                            x:Name="TestsBuilderName"
                            Header="{x:Bind utilities:MessageProvider.ToHeader(utilities:MessageProvider.NAME_KEY)}"
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 20"
                            Width="500"
                            TextChanged="TestNameChanged"
                        />
                        <TextBox 
                            x:Name="TestsBuilderDescription"
                            Header="{x:Bind utilities:MessageProvider.ToHeader(utilities:MessageProvider.DESCRIPTION_KEY)}"
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 20"
                            Width="500"
                            TextChanged="TestDescriptionChanged"
                        />
                        <RichEditBox 
                            x:Name="TestsBuilderInstructions"
                            Header="{x:Bind utilities:MessageProvider.ToHeader(utilities:MessageProvider.INSTRUCTIONS_KEY)}"
                            Width="500" 
                            MinHeight="100"
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 20"
                            TextChanged="TestInstructionsChanged"
                        />
                        <TimePicker 
                            x:Name="TestsBuilderTime"
                            Header="{x:Bind utilities:MessageProvider.ToHeader(utilities:MessageProvider.TEST_TIME_KEY)}"
                            ClockIdentifier="24HourClock" 
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 20"
                            TimeChanged="TestTestTimeChanged"
                        />
                        <TextBlock 
                            Text="{x:Bind utilities:MessageProvider.ACCESS_CODE_KEY}"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            HorizontalAlignment="Center"
                            Margin="0, 0, 0, 5"
                        />
                        <Border 
                            Margin="0, 0, 0, 20"
                            Padding="15, 5"
                            BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                            CornerRadius="{StaticResource ControlCornerRadius}" 
                            Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}"
                            BorderThickness="1"
                            HorizontalAlignment="Center"
                        >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock 
                                    x:Name="TestCodeText"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Margin="0, 0, 15, 0"
                                    FontSize="18"
                                />
                                <controls:ConfirmationButton
                                    x:Name="TestCodeButton"
                                    Click="CopyToClipboardButtonClick"
                                    ToolTipService.ToolTip="Copy to clipboard"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                >
                                    <FontIcon 
                                        Glyph="&#xE8C8;" 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        FontSize="16"
                                    />
                                </controls:ConfirmationButton>
                            </StackPanel>
                        </Border>
                        <controls:ConfirmationButton 
                            ToolTipService.ToolTip="Preview"
                            Padding="15,7.5"
                            HorizontalAlignment="Center"
                            Width="250"
                            Click="PreviewButtonClick"
                        >           
                            <StackPanel Orientation="Horizontal">
                                <FontIcon 
                                    Glyph="&#xE8A1;" 
                                    Margin="0, 0, 10, 0"
                                    FontSize="18"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                />
                                <TextBlock 
                                    Text="{x:Bind utilities:MessageProvider.PREVIEW_KEY}"
                                    FontWeight="Medium"
                                    FontSize="14"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    LineStackingStrategy="BlockLineHeight"
                                    LineHeight="14"
                                />
                            </StackPanel>
                        </controls:ConfirmationButton>
                        <Border 
                            Margin="15"
                            BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0, 0, 0, 1"
                        />
                        <ListView
                            x:Name="TasksListView"
                            ItemsSource="{x:Bind TasksList}"
                            ItemTemplateSelector="{StaticResource TaskTemplateSelector}"
                            HorizontalAlignment="Center"
                            SelectionMode="None"
                        />
                        <Button 
                            Margin="0, 15, 0, 0"
                            Padding="40,7.5"
                            HorizontalAlignment="Center"
                        >
                            <StackPanel Orientation="Horizontal">
                                <FontIcon 
                                    Glyph="&#xE78B;" 
                                    Margin="0, 0, 10, 0"
                                    FontSize="18"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                />
                                <TextBlock 
                                    Text="{x:Bind utilities:MessageProvider.ADD_NEW_TASK_KEY}"
                                    FontWeight="Medium"
                                    FontSize="14"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    LineStackingStrategy="BlockLineHeight"
                                    LineHeight="14"
                                />
                            </StackPanel>
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem 
                                        Text="{x:Bind utilities:MessageProvider.TEXT_KEY}"
                                        Tag="Text" 
                                        Click="AddNewTaskClick"
                                    />
                                    <MenuFlyoutItem 
                                        Text="{x:Bind utilities:MessageProvider.TRUE_FALSE_KEY}"
                                        Tag="TrueFalse" 
                                        Click="AddNewTaskClick"
                                    />
                                    <MenuFlyoutItem 
                                        Text="{x:Bind utilities:MessageProvider.CHECKBOXES_KEY}"
                                        Tag="Checkboxes" 
                                        Click="AddNewTaskClick"
                                    />
                                    <MenuFlyoutItem 
                                        Text="{x:Bind utilities:MessageProvider.MULTIPLE_CHOICE_KEY}"
                                        Tag="MultipleChoice" 
                                        Click="AddNewTaskClick"
                                    />
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                        <Border 
                            Margin="15"
                            BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0, 0, 0, 1"
                        />
                        <StackPanel 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                        >
                            <controls:ConfirmationButton 
                                Margin="0, 0, 15, 0"
                                ToolTipService.ToolTip="Save"
                                Padding="15,7.5"
                                HorizontalAlignment="Center"
                                Click="SaveButtonClick"
                            >
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon 
                                        Glyph="&#xE74E;" 
                                        Margin="0, 0, 10, 0"
                                        FontSize="20"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                    />
                                    <TextBlock 
                                        Text="{x:Bind utilities:MessageProvider.SAVE_KEY}"
                                        FontWeight="Medium"
                                        FontSize="16"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        LineStackingStrategy="BlockLineHeight"
                                        LineHeight="16"
                                    />
                                </StackPanel>
                            </controls:ConfirmationButton>
                            <controls:ConfirmationButton 
                                ToolTipService.ToolTip="Remove"
                                Padding="15,7.5"
                                HorizontalAlignment="Center"
                                Click="RemoveButtonClick"
                            >
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon 
                                        Glyph="&#xE74D;" 
                                        Margin="0, 0, 10, 0"
                                        FontSize="20"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                    />
                                    <TextBlock 
